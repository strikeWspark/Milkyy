<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient"
    tools:context=".Activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/mky_brand_icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@color/cardview_dark_background"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="35sp"
            android:padding="12dp"
            android:textColor="@android:color/background_light"
            android:textAlignment="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mky_username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mky_username_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:textColor="@android:color/background_dark"
                android:hint="@string/mky_hint_username"
                android:inputType="text"/>


        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mky_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mkyy_password_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:textColor="@android:color/background_dark"
                android:hint="@string/mky_hint_password"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mky_next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="12dp"
                android:backgroundTint="@color/colorAccent"
                android:text="@string/mky_next_text"
                android:textColor="@android:color/background_dark"
                android:elevation="10dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mky_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/mky_next_button"
                android:text="@string/mky_cancel_text"
                android:textColor="@android:color/background_dark"
                android:layout_marginRight="14dp"/>


        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mky_signup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mky_signup_text"
            android:textColor="@android:color/background_dark"
            android:background="@drawable/signup_button"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="95dp"/>

    </LinearLayout>




</ScrollView>
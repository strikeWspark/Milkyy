<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/signup_gradient">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/mky_signup_appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/mky_signup_toolbar"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/app_name"
                app:navigationIcon="@drawable/back_button"/>
        </com.google.android.material.appbar.AppBarLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mky_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="4dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mky_name_edit"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:hint="@string/mky_hint_name"
                android:inputType="text"/>





        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mky_regdno_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="4dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mky_regdno_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/mky_hint_registration"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="8"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mky_signup_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="4dp"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mky_signUp_password_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/mky_hint_password"
                android:maxLines="1"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mky_mobileno_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="4dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mky_mobileno_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/mky_hint_mobileno"
                    android:inputType="number"
                    android:maxLines="1"
                    android:maxLength="10"/>
        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:id="@+id/mky_gender_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="4dp">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/mky_male_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mky_radio_male"
                android:textSize="18sp"
                android:paddingBottom="10dp"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/mky_female_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mky_radio_female"
                android:textSize="18sp"
                android:paddingBottom="10dp"/>
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/mky_others_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mky_radio_others"
                android:textSize="18sp"/>
        </RadioGroup>

        <Spinner
            android:id="@+id/mky_spinner_hostel"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="100dp"
            android:paddingBottom="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mky_signUp_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mky_signup"
            android:textColor="@android:color/background_dark"
            android:background="@drawable/signup_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp" />
    </LinearLayout>



</ScrollView>